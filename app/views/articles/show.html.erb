<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<span>SingleFile:</span> 
<p>
   <%= image_tag @article.picture.url if @article.picture? %>
</p>
<p>
   <%= image_tag @article.picture.thumb.url if @article.picture.version_exists?(:thumb) && @article.picture.thumb.file.exists? %>
</p>
<p>
   <%= image_tag @article.picture.small_thumb.url if @article.picture.version_exists?(:small_thumb) && @article.picture.small_thumb.file.exists? %>
</p>

<span>Multi_Files:<%= @article.muti_picture.length %></span>
<% @article.muti_picture.each do |pic| %>
<p>
   <%= image_tag pic.url %>
</p>
<% end %>

<h2>Comments</h2>
<%= render @article.comments %>
 
<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<%= link_to 'Edit Article', edit_article_path(@article) %> |
<%= link_to 'Back to Articles', articles_path %>