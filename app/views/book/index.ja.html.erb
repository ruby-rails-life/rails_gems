<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <h3><%=t :hello, message: "うれしい!" %>&nbsp;&nbsp;<%=l Time.now, format: :long %></h3>
          <p>Test Class Method in Module : <%= Book.say_today %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">  
          <table class="table table-striped">
            <caption><strong>すべての本</strong></caption>
            <thead>
              <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>作者</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.show_name? %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col-md-12">  
          <table class="table table-striped"">
            <caption><strong>出版済の本</strong></caption>
            <thead>
              <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>作者</th>
              </tr>
            </thead>
            <tbody>
              <% @books_published.each do |book| %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.show_name? %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col-md-12">  
          <table class="table table-striped"">
            <caption><strong>出版状況によりソート</strong></caption>
            <thead>
              <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>作者</th>
              </tr>
            </thead>
            <tbody>
              <% @books_order.each do |book| %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.show_name? %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>    
</div>