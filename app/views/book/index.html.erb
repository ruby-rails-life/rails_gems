<h1>Book#index</h1>
<p>Test Class Method in Module : <%= Book.say_today %></p>
<p>all books</p>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>author</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.show_name? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

