<div class="row" style="margin-bottom: 10px">
  <div class="col-md-12">
    <strong>Name:</strong><%= @universe.name %>
  </div>
</div>
<div class="row" style="margin-bottom: 10px">
  <div class="col-md-12">
    <h2>Materials</h2>
    <% if @universe.materials.present? %>
    <%= render @universe.materials %>
    <% end %>
  </div>
</div>   

<div class="row" style="margin-bottom: 10px">
  <div class="col-md-12">
    <h2>Add a material:</h2>
    <%= render "materials/form" %>
  </div>
</div>   

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit', edit_universe_path(@universe) %> |
    <%= link_to 'Back', universes_path %>
  </div>
</div>  